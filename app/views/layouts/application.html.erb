<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/c0e8e652b4.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <% if user_signed_in? %>
      <li>
       <%= link_to 'Home', user_path(current_user.id) %>
      </li>
      <li>
       <%= link_to 'Users', user_path(current_user.id) %>
      </li>
      <li>
       <%= link_to 'Books', books_path %>
      </li>
      <li>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
       <%= link_to 'Home', root_path %>
      </li>
      <li>
       <%= link_to 'About', homes_about_path %>
      </li>
      <li>
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "Log in", new_user_session_path %>
      </li>
    <% end %>
  </header>
    <%= render 'layouts/flash' %>
  <div class="container px-5 px-sm-0" >
  <div class="row">
    <%= yield %>
  </div>
  </div>
  </body>
</html>
